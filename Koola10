  <script>
    function copyTag() {
      const tag = "$koola10";
      navigator.clipboard.writeText(tag).then(() => {
        document.getElementById('copiedMsg').innerText = 'Cash App tag copied to clipboard!';
      }).catch(err => {
        document.getElementById('copiedMsg').innerText = 'Failed to copy tag. Try manually.';
      });
    }
